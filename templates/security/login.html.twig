{% extends "base.html.twig" %}

{% block body %}
	{% if error %}
		<p class="text-danger">{{error.messageKey}}</p>
	{% endif %}

	<form method="POST">
		<label for="email">Adresse e-mail</label>
		<input type="email" name="_username" id="email" value="{{last_email}}" class="form-control" placeholder="Votre e-mail">
		<label for="password">Mot de passe</label>
		<input type="password" name="_password" id="password" class="form-control" placeholder="Votre mot de passe">
		<input type="submit" value="Se connecter" class="btn btn-primary mt-2">
	</form>

	<a href="/user/create">Pas de compte ? Cr√©ez un compte utilisateur !</a>
{% endblock %}
